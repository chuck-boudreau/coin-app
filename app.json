{
  "expo": {
    "name": "COIN App",
    "slug": "coin-app",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.agiledesignmethods.coinapp",
      "requireFullScreen": false,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to import hand-drawn COIN diagrams.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photos to import COIN diagrams."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store"
    ]
  }
}
